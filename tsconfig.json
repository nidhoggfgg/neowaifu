{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "incremental": true,
    "declaration": true,
    "declarationDir": "dist/dts",
    "strict": true,
    "paths": {
      "@cubism/*": ["cubism/Framework/src/*"]
    },

    // for comile cubism/Framework...
    // ðŸ˜­ðŸ˜­ðŸ˜­
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "allowImportingTsExtensions": true,
  },
  "include": [
    "src/**/*",
    "cubism/**/*",
  ],
  "exclude": [
    "node_modules",
    "sample",
    "dist",
  ],
}
