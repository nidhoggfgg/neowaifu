{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "noEmitOnError": true,
    "moduleResolution": "NodeNext",
    // "strict": true,
    "strictNullChecks": false,
    "incremental": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/dts",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@cubism/*": ["cubism/framework/src/*"]
    },
  },
  "include": [
    "src/**/*",
    "cubism/**/*",
  ],
  "exclude": [
    "node_modules",
    "sample",
    "dist",
  ],
}
