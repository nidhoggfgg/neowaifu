{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "strict": true,
    "experimentalDecorators": true,
    "incremental": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/dts",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cubism/*": ["cubism/framework/src/*"]
    },
    "types": [
      "node",
      "offscreencanvas"
    ],
  },
  "include": [
    "src/**/*",
    "cubism/**/*",
  ],
  "exclude": [
    "node_modules",
    "sample",
    "dist",
    "src/types"
  ],
}
